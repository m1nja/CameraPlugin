<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_corner_bg">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@drawable/notice_bg"/>
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:gravity="center"
            android:background="@drawable/ic_dialog_topbg"
            android:text="@string/text_slicejobs_hint"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/dialog_ettext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:minHeight="55dp"
            android:background="@null"
            android:drawableBottom="@drawable/bg_line"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/dialog_ettext2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:minHeight="55dp"
            android:background="@null"
            android:drawableBottom="@drawable/bg_line"
            android:visibility="gone"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_select_list"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:minHeight="55dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/text_color2"
            android:padding="15dp"
            android:background="@color/color_white"
            android:text=""
            />

        <TextView
            android:id="@+id/dialog_bt_hint"
            android:layout_width="160dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_white"
            android:background="@drawable/selector_button_big_corners"
            android:text="@string/i_know"
            android:layout_marginBottom="25dp"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/dialog_bt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="25dp">

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="13sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/selector_button_white_corners"
                android:textColor="#CCCCCC"
                android:text="残忍拒绝"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/dialog_define"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/selector_button_big_corners"
                android:textColor="@android:color/white"
                android:text="允许"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
